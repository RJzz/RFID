<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.DatePicker?>
<GridPane vgap="10" hgap="10" alignment="CENTER" xmlns="http://javafx.com/javafx/8.0.112-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.UpdateController">

    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <Text text="设备名称" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="rName" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    <Text text="(必填)" GridPane.columnIndex="2" GridPane.rowIndex="1" fill="crimson"/>

    <Text text="设备号" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="rId"  GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    <Text text="(必填)" GridPane.columnIndex="2" GridPane.rowIndex="2" fill="crimson"/>

    <Text text="设备类型" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <TextField fx:id="rType" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    <Text text="(选填)" GridPane.columnIndex="2" GridPane.rowIndex="3"/>

    <Text text="存放地点" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <TextField fx:id="rPosition" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
    <Text text="(选填)" GridPane.columnIndex="2" GridPane.rowIndex="4"/>

    <Text text="保管人" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
    <TextField fx:id="rKname" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
    <Text text="(必填)" GridPane.columnIndex="2" GridPane.rowIndex="5" fill="crimson"/>

    <Text text="责任人" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
    <TextField fx:id="rDname" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
    <Text text="(必填)" GridPane.columnIndex="2" GridPane.rowIndex="6" fill="crimson"/>

    <Text text="购买时间" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
    <DatePicker fx:id="rDate" GridPane.columnIndex="1" GridPane.rowIndex="7"/>
    <Text text="(必填)" GridPane.columnIndex="2" GridPane.rowIndex="7" fill="crimson"/>
    <HBox alignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="12">
        <Button  alignment="CENTER_LEFT" onAction="#addConfirm" text="确认"/>
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
        <Text text="     "/>
        <Button alignment="CENTER_RIGHT" onAction="#addCancel" text="取消"/>
    </HBox>
    <Text text="" fx:id="info" GridPane.columnIndex="1" GridPane.rowIndex="13" fill="crimson"/>

</GridPane>
