    <Text text="保管人电话" GridPane.columnIndex="0" GridPane.rowIndex="8"/>
    <TextField fx:id="kPhone" GridPane.columnIndex="1" GridPane.rowIndex="8"/>
    <Text text="(必填)" GridPane.columnIndex="2" GridPane.rowIndex="8" fill="crimson"/>

    <Text text="保管人邮箱" GridPane.columnIndex="0" GridPane.rowIndex="9"/>
    <TextField fx:id="kEmail" GridPane.columnIndex="1" GridPane.rowIndex="9"/>
    <Text text="(选填)" GridPane.columnIndex="2" GridPane.rowIndex="9"/>

    <Text text="责任人电话" GridPane.columnIndex="0" GridPane.rowIndex="10"/>
    <TextField fx:id="dPhone" GridPane.columnIndex="1" GridPane.rowIndex="10"/>
    <Text text="(必填)" GridPane.columnIndex="2" GridPane.rowIndex="10" fill="crimson"/>

    <Text text="责任人邮箱" GridPane.columnIndex="0" GridPane.rowIndex="11"/>
    <TextField fx:id="dEmail" GridPane.columnIndex="1" GridPane.rowIndex="11"/>
    <Text text="(选填)" GridPane.columnIndex="2" GridPane.rowIndex="11" />

    <HBox alignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="12">
        <Button  alignment="CENTER_LEFT" onAction="#addConfirm" text="确认"/>
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
        <Text text="     "/>
        <Button alignment="CENTER_RIGHT" onAction="#addCancel" text="取消"/>
    </HBox>




    <Text text="" fx:id="info" GridPane.columnIndex="1" GridPane.rowIndex="13" fill="crimson"/>

