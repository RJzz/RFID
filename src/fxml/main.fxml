<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/8.0.112-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MainController">
    <top>
        <Label style="-fx-font: NORMAL 20 Tahoma;" text="RFID管理系统" BorderPane.alignment="CENTER_LEFT" />
