            </columns>
            <columns>
                <TableColumn prefWidth="100.0" text="设备类型" />
            </columns>
            <columns>
                <TableColumn prefWidth="100.0" text="存放地点" />
            </columns>
            <columns>
                <TableColumn prefWidth="80.0" text="保管人">
                    <columns>
                    </columns>
                </TableColumn>
            </columns>
            <columns>
                <TableColumn prefWidth="80.0" text="责任人" />
            </columns>
            <columns>
                <TableColumn prefWidth="100.0" text="购买时间" />
            </columns>
            <!--<sortOrder>
                <fx:reference source="firstNameColumn" />
            </sortOrder>-->
        </TableView>

    </center>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <bottom>
        <HBox alignment="BOTTOM_CENTER" spacing="40.0">
            <Button onAction="#addRFID" text="添加设备" />
            <Button onAction="#addRFID" text="查找设备" />
            <Button onAction="#addRFID" text="删除设备" />
            <Button onAction="#addRFID" text="退出系统" />
        </HBox>
    </bottom>

